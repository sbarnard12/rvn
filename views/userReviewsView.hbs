<div class="container-fluid" style="background: #c7e6b5; font-weight: bold" >
    <ul class="nav navbar-nav">
          <li><a href="#" id="reviews_nav" name={{user._id}}>Reviews</a></li>
          <li><a href="#" id="taskHistory_nav" name={{user._id}}>Task History</a></li>
          <li><a href="#" id="currentTasks_nav" name={{user._id}}>Current Tasks</a></li>
          <li><a href="#" id="profile_nav" name={{user._id}}>Profile</a></li>
      </ul>
</div>
<div id="reviews" class="tab active">
    <br>
    <div class= "container-fluid" style=" max-width: 80%; background: #9bd17d">
        <h1>Reviews</h1>
    </div>
    <br>
    <div class= "container-fluid" style=" max-width: 80%;">
        {{#each reviews}}
            <table class="taskhistory_table" border="2">
                <tr style="background-color:#ececec">
                    <th>Reviewed By: </th>
                    <td>{{this.reviewer.name}}</td>
                </tr>
                <tr>
                    <th>Review Date</th>
                    <td>{{this.dateString}}</td>
                </tr>
                <tr style="background-color:#ececec">
                    <th>Comments</th>
                    <td>{{this.description}}</td>
                </tr>
            </table>
            <br>
        {{/each}}
    </div>
</div>

<script src="/javascripts/userProfileScript.js"></script>