<div class="container-fluid">
  <table class="searchResults">
    <thead>
      <th>
        <tr>
          <td class="tableHeader searchResults" colspan="9" style="border: solid 1px #000000; width: 100%">
            <b>Search Results</b>
          </td>
        </tr>
      </th>
    </thead>
    <tbody>
    <table class="searchResults">
      {{#each taskList}}
          <tr class="row3" style="border-style: solid;border-width:1px;background: #c7e6b5;border-color: #000000;">
              <td style="display:none">{{this._id}}</td>
              <td style="display:none">{{this.poster.id}}</td>
          <td class="col1">
            <table>
              <tr class="r3c1row1">
                <td>
                  <p><img src="" syle="height: 100%; width: 100%;" alt="Profile Picture"></p>
                </td>
              </tr>
              <tr>
                <td class="r3c1row2">
                  <p><a class="poster_link">{{this.poster.firstName}} {{this.poster.lastName}}</a></p>
                </td>
              </tr>
              <tr>
                <td class="r3c1row3">
                  <p>{{this.address.city}}</p>
                </td>
              </tr>
            </table>
          </td>  
          <td class="col2">
            <table>
              <tr class="r3c2row1">
                <td >
                  <p><label>{{this.title}}</label></p>
                </td>
              </tr>
              <tr class="r3c2row2">
                <td>
                  <p>{{this.description}}</p>
                </td>
              </tr>
            </table>
          </td>
          <td class="col3">
            <table>
              <tr class="r3c3row1">
                <td>
                  <p><button type="button" class="viewDetails col3" >View Details</button></p>
                </td>
              </tr>
            </table>
          </td>      
        </tr>
      {{/each}}
      </table>

    </tbody>
  </table>
</div>

<script src="/javascripts/taskListScript.js"></script>